doctype html
html
    head
        title Chat
        link(rel="stylesheet" href="public/css/bootstrap.css")
        link(rel="stylesheet" href="public/css/font-awesome.min.css")
        link(rel="stylesheet" href="public/css/main.css")
    body
        div.container
            header
                h1 Simple markdown chat
            div.col-md-6
                div.form-group
                    label Name
                    input.form-control(placeholder="Name" type='text' value="")#name 
                div.form-group
                    label Message
                    textarea.form-control(placeholder="Message" type='text' rows="8")#message 
                button.btn.btn-default#send Send
                hr
                div.well#markdownPreview
            div.col-md-6
                div.chat-display
        footer#footer By 
            a(href="https://github.com/mfbx9da4") David Alberto Adler

        script(type='text/javascript') var host = "#{host}";
        script(data-main="public/js-loading-main" src="public/libs/require.min.js")
